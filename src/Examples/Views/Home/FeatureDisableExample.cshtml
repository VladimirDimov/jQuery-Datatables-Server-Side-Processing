<table id="SearchResultTable" class="display" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Age</th>
            <th>City</th>
            <th>Starting Date</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Age</th>
            <th>City</th>
            <th>Starting Date</th>
        </tr>
    </tfoot>
</table>

@section Scripts {
    <script>
        var table = $('#SearchResultTable').DataTable({
            "proccessing": true,
            "serverSide": true,
            //"paging": false,
            //"ordering": false,
            //"info": false,
            "ajax": {
                url: "@Url.Action("GetData", "Home")",
                type: 'POST'
            },
            "language": {
                "search": "",
                "searchPlaceholder": "Search..."
            },
           "columns": [
               { "data": "Id", "name": "IdName" },
               { "data": "Name", searchable: false },
               { "data": "Age", "orderData": [2,4] },
               { "data": "Address.City", searchable: true },
               { "data": "StartingDate" }
            ],
           "columnDefs": [
               {
                   "render": function (data, type, row) {
                       date = new Date(parseInt(row.StartingDate.replace("/Date(", "").replace(")/", ""), 10));

                       return date.toLocaleDateString();
                   },
                   "targets": 4
               },
               { "visible": true, "targets": [4] }
           ]
        });

        //table.search("999").draw();
    </script>
}